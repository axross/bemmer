{
  "name": "bemmer",
  "version": "0.1.0",
  "description": "Class name generator for React.js with BEM.",
  "main": "bemmer.js",
  "scripts": {
    "build": "babel src/bemmer.es6 -o bemmer.js",
    "test": "mocha --colors --growl --compilers es6:babel/register --ui bdd --reporter spec ./src/**/__tests__/**/*.spec.*",
    "tdd": "mocha --watch --colors --growl --compilers es6:babel/register --ui bdd --reporter spec ./src/**/__tests__/**/*.spec.*",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:axross/bemmer.git"
  },
  "keywords": [
    "react",
    "bem",
    "classname"
  ],
  "author": "axross",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/axross/bemmer/issues"
  },
  "homepage": "https://github.com/axross/bemmer",
  "devDependencies": {
    "babel": "^4.6.6",
    "mocha": "^2.1.0",
    "should": "^5.0.1"
  }
}
